<style>
	footer {
		padding: 2em 0em 2em 0em;
		background-color: var(--bootcamp-background);
		color: var(--bootcamp-light-orange);
	}

	b {
		text-align: left;
	}

	ul {
		list-style: none;
		padding-left: 0;
		line-height: 1.5;
		font-size: smaller;
	}
	ul a, ul span {
		padding: 0.4em 0;
		display: block;
		text-decoration: none;
		color: var(--bootcamp-light-orange);
		font-weight: 300;
	}
	ul a:hover {
		color: var(--bootcamp-dark-orange);
	}
	img {
		margin-bottom: 2em;
	}
	.copyright {
		margin-top: 4em;
		font-weight: 300;
		font-size: smaller;
		text-align: center;

	}
	.ul-right {
		text-align: right;
	}
	@media (max-width: 1000px) {
		.footer-link{
			grid-auto-rows: max-content;
			font-size: 0.9em;
		}
		.copyright{
			margin-top: 1em;
			font-size: 0.7em;
			line-height: 1.5;
		}
	}
</style>
