---
import type {ImageMetadata} from 'astro';
import {Image} from 'astro:assets';
import { Icon } from 'astro-icon/components'

interface Props {
    icon: string;
    headline: string;
}

const {icon, headline} = Astro.props;
---
<div class="benefit-card">
    <Icon class="centered-icon" name={icon} />
    <h3>{headline}</h3>
    <p class="component-text">
        <slot />
    </p>

</div>

<style>
    h3 {
        font-size: 1.0em;
        font-family: 'Poppins';
    }
    .centered-icon {
        color: var(--bootcamp-dark-orange);
        font-size: 5em;
    }

    .component-text {
        text-align: center;
        line-height: 1.8em;
        font-weight: 300;
        font-size: 0.9em;
        margin: 0;
    }
    @media (max-width: 740px) {
        .component-text{
            line-height: 1.5;
        }
    }
</style>
