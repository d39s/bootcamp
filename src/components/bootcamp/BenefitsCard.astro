---
import type {ImageMetadata} from 'astro';
import {Image} from 'astro:assets';
import { Icon } from 'astro-icon/components'

interface Props {
    icon: string;
    headline: string;
}

const {icon, headline} = Astro.props;
---
<div class="benefit-card">
    <Icon class="centered-icon" name={icon} />
    <h3>{headline}</h3>
    <p class="component-text">
        <slot />
    </p>

</div>

<style>
    h3 {
        font-size: 1.5em;
    }
    .centered-icon {
        color: var(--bootcamp-dark-orange);
        font-size: 6em;
    }
    .benefit-card {
        text-align: center;
        border: 1px dashed var(--bootcamp-dark-orange);
        border-radius: 40px;
        width: 100%;

        margin-left: 1em;   
        margin-right: 1em;
    }
    .component-text {
        line-height: 1.5em;
    }
</style>
