---
import type {ImageMetadata} from 'astro';
import {Image} from 'astro:assets';

interface Props {
    name: string;
    descr: string;
    img_path: string;
}

const {name, descr, img_path} = Astro.props;
---
    <div class="card">
        <img width="1950" height="1950" src="https://dasbootcamp.de/wp-content/uploads/2023/09/BootCamp-FitFlow_Rekord_Juli_2023_@E.S-Photographie-133.jpg" alt={name}>
        <div class="name">{name}</div>
        <div class="titel">{descr}</div>
    </div>


<style>
    .card{
        padding: 2.1em 1.7em;
        text-align: center;
        border: 1px dashed var(--bootcamp-dark-orange);
        border-radius: 60px;
    }
    .card>img{
        border-radius: 50%;
        overflow: hidden;
        aspect-ratio: 1 / 1;
    }
    .name{
        margin: 20px 0 10px;
        font-weight: 500;
    }
    .titel{
        margin: 10px 0;
        font-style: italic;
        font-size: 0.9em;
    }
    @media (max-width: 1000px) {
        .card{
            padding: 1.4em 1.0em;
            text-align: center;
            border: 1px dashed var(--bootcamp-dark-orange);
            border-radius: 60px;
        }
    }
    @media (max-width: 740px) {
        .card{
            padding: 1.7em 1.2em 1.1em;
            margin: 0 auto;
            max-width: 500px;
        }
        
    }
</style>
