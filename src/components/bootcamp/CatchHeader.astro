---
import type {ImageMetadata} from 'astro';
import {Image} from 'astro:assets';

interface Props {
    topic: string;
}

const {topic} = Astro.props;
//const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/**/*.{jpeg,jpg,png,gif}');

---
<div class="catch-header">

    <div class="container">
        <div class="topic">
            {topic}
        </div>
        <div class="headline">
            <slot />
        </div>
    </div>
</div>

<style>
    .catch-header {
        background-color: var(--bootcamp-background);
        text-align: center;
        padding-bottom: 6em;
        padding-top: 4em;
    }
    .topic {
        margin-bottom: 1em;
        color: var(--bootcamp-dark-orange);
        text-transform: uppercase;
        letter-spacing: 5px;
        font-size: 0.8em;
    }
    .headline {
        color: var(--bootcamp-light-orange);
        width: 80%;
        margin: 0 auto;
        font-family: "CormorantGaramond";
        font-size: 4em;
        line-height: 1;
    }
    @media (max-width: 1000px) {
        .catch-header{
            padding-bottom: 2em;
            padding-top: 1.5em;
        }
        .headline {
            width: 90%;
            font-size: 3em;
        }
    }
    @media (max-width: 740px) {
        .headline {
            font-size: 1.7em;
            width: 100%;
        }
    }
</style>