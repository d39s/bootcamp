---
import contact_bg from '../../assets/layout/kontakt_das_bootcamp_leipzig.webp';
---
<div class="bg-contact" style={`background-image: url(${contact_bg.src});`}>
    <div class="container">
        <div class="wrapper">
            <h2>Jetzt unverbindlich Kontakt mit uns aufnehmen!</h2>
            <button class="button-main">Kontakt</button>
        </div>
    </div>
</div>

<style>
    .container{
        display: flex;
        justify-content: end;
        align-items: center;
        min-height: 85vh;
    }
    h2{
        font-size: 2em;
    }
    .wrapper{
        padding: 2.5em 3.5em;
        max-width: 650px;
        background-color: var(--bootcamp-background-light);
        border-radius: 50px;
        text-align: center;
    }
    .button-main{
        max-width: 230px;
    }
    .bg-contact{
        margin-bottom: -50px!Important;
        padding-top: 2.5em;
        background-size: cover;
        background-position: top center;
    }
    @media (max-width: 1000px) {
        h2{
            font-size: 1.5em;
        }
        .wrapper{
            max-width: 450px;
            margin-right: 35px;
            padding: 1.5em 2.5em;
        }
    }
    @media (max-width: 740px) {
        .container{
            min-height: 50vh;
        }
    }
</style>
